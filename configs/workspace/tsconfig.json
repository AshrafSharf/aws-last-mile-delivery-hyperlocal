{
  "compilerOptions": {
    // "traceResolution": true,
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "removeComments": true,
    "resolveJsonModule": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "../../",
    "baseUrl": ".",
    "lib": ["dom", "esnext"],
    "typeRoots": [
      "../../node_modules/@types",
      "../../@types"
    ],
  },
  "include": ["jest-dom/extend-expect"],
  "files": [
    "../../@types/global.d.ts"
  ]
}
